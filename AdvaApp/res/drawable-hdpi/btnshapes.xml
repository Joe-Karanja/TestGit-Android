<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FF00FF" />
      <stroke
          android:width="1dp"
          android:color="#FF00FF" />
      <corners
          android:radius="30dp" />
      <padding
          android:left="20dp"
          android:top="10dp"
          android:right="20dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#D02090"
          android:endColor="#8B2252"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#ffffff" />
      <corners
          android:radius="30dp" />
      <padding
          android:left="20dp"
          android:top="10dp"
          android:right="20dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>